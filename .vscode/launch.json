    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Nest Framework",
            "args": ["${workspaceFolder}/api/src/main.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}/api",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Bling Migration",
            "args": ["${workspaceFolder}/bin/src/migrate-products-from-bling.js"],
            "cwd": "${workspaceRoot}/bin",
            "protocol": "inspector"
        }
    ]
}